{
  "name": "alexa-bootstrap",
  "description": "A framework to develop scalable and production ready Alexa Skills",
  "version": "0.1.0",
  "author": "Felipe Hlibco <felipe@cleanify.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:hlibco/alexa-bootstrap.git"
  },
  "bugs": "https://github.com/hlibco/alexa-bootstrap.git/issues",
  "homepage": "https://github.com/hlibco/alexa-bootstrap#readme",
  "engines": {
    "npm": ">=6",
    "node": ">=6"
  },
  "main": "./src/index",
  "license": "MIT",
  "scripts": {
    "lint": "standard --verbose src/**/*.js test/**/*.js | snazzy",
    "test": "NODE_ENV=test DEBUG=test,alexa-bootstrap:* DEBUG_COLORS=true ava",
    "check": "nsp check",
    "coverage": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "pre-commit": "lint",
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "verbose": true,
    "tap": false
  },
  "nyc": {
    "lines": 10,
    "statements": 5,
    "functions": 5,
    "branches": 5,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true,
    "check-coverage": true,
    "report-dir": "./coverage"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect"
    ]
  },
  "dependencies": {
    "ava": "0.17.0",
    "debug": "2.6.2"
  },
  "devDependencies": {
    "coveralls": "2.12.0",
    "nyc": "10.0.0",
    "pre-commit": "1.2.2",
    "snazzy": "5.0.0",
    "standard": "8.6.0"
  },
  "keywords": [
    "alexa",
    "alexa",
    "skill",
    "alexa",
    "skills",
    "skills",
    "amazon",
    "echo",
    "amazon",
    "alexa",
    "amazon"
  ]
}
